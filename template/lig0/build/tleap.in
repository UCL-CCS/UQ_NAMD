source leaprc.protein.ff14SB
source leaprc.water.tip3p
source leaprc.lipid14
source leaprc.gaff
frcmod = loadamberparams /hppfs/work/pn72qu/di36yax3/tmp/uq_namd2_wouter/template/lig0/par/lig.frcmod

# Load moleculaes
lig = loadmol2 /hppfs/work/pn72qu/di36yax3/tmp/uq_namd2_wouter/template/lig0/par/lig.mol2
prot = loadpdb /hppfs/work/pn72qu/di36yax3/tmp/uq_namd2_wouter/template/lig0/par/protein.pdb

complex = combine{prot lig}
alignaxes complex

# Counterions & Solvation
addions complex Cl- 0.0
addions complex Na+ 0.0
solvatebox complex TIP3PBOX $box_size

savepdb complex complex.pdb
saveamberparm complex complex.prmtop complex.crd

quit
